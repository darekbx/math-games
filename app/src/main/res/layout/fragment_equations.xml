<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/fragment_equation_scene">

    <TextView
        android:id="@+id/equation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/num_pad"
        android:text="10 + 5 * 7"
        android:typeface="normal"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#fff"
        />

    <TextView
        android:id="@+id/result_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/equation_view"
        app:layout_constraintEnd_toEndOf="@id/equation_view"
        app:layout_constraintTop_toBottomOf="@id/equation_view"
        android:textAlignment="center"
        tools:text="56"
        android:typeface="normal"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#fff"
        android:background="#222"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        />
    <TextView
        android:id="@+id/statistics_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/equation_view"
        app:layout_constraintEnd_toEndOf="@id/equation_view"
        app:layout_constraintTop_toBottomOf="@id/result_view"
        android:textAlignment="center"
        tools:text="12 / 80"
        android:typeface="normal"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#fff"
        android:layout_marginTop="12dp"
        />
    <TextView
        android:id="@+id/level_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statistics_view"
        android:textAlignment="center"
        tools:text="Level 1"
        android:typeface="normal"
        android:textSize="12sp"
        android:textColor="#fff"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/num_pad"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="18dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        >
        <Button
            android:id="@+id/button_7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_8"
            android:text="7"
            android:tag="7"
            style="@style/KeyboardButton"
            />
        <Button
            android:id="@+id/button_8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_5"
            app:layout_constraintStart_toEndOf="@id/button_7"
            app:layout_constraintEnd_toStartOf="@id/button_9"
            android:text="8"
            android:tag="8"
            style="@style/KeyboardButton"
            />
        <Button
            android:id="@+id/button_9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_6"
            app:layout_constraintEnd_toStartOf="@id/button_confirm"
            app:layout_constraintStart_toEndOf="@id/button_8"
            android:text="9"
            android:tag="9"
            style="@style/KeyboardButton"
            />
        <Button
            android:id="@+id/button_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/button_7"
            app:layout_constraintBottom_toTopOf="@id/button_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_8"
            android:text="4"
            android:tag="4"
            style="@style/KeyboardButton"
            />
        <Button
            android:id="@+id/button_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/button_8"
            app:layout_constraintBottom_toTopOf="@id/button_2"
            app:layout_constraintStart_toEndOf="@id/button_7"
            app:layout_constraintEnd_toStartOf="@id/button_9"
            android:text="5"
            android:tag="5"
            style="@style/KeyboardButton"
            />
        <Button
            android:id="@+id/button_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/button_9"
            app:layout_constraintBottom_toTopOf="@id/button_3"
            app:layout_constraintEnd_toStartOf="@id/button_confirm"
            app:layout_constraintStart_toEndOf="@id/button_8"
            android:text="6"
            android:tag="6"
            style="@style/KeyboardButton"
            />
        <Button
            android:id="@+id/button_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/button_4"
            app:layout_constraintBottom_toBottomOf="@id/button_0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_8"
            android:text="1"
            android:tag="1"
            style="@style/KeyboardButton"
            />
        <Button
            android:id="@+id/button_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/button_5"
            app:layout_constraintBottom_toTopOf="@id/button_0"
            app:layout_constraintStart_toEndOf="@id/button_7"
            app:layout_constraintEnd_toStartOf="@id/button_9"
            android:text="2"
            android:tag="2"
            style="@style/KeyboardButton"
            />
        <Button
            android:id="@+id/button_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/button_6"
            app:layout_constraintBottom_toTopOf="@id/button_0"
            app:layout_constraintEnd_toStartOf="@id/button_confirm"
            app:layout_constraintStart_toEndOf="@id/button_8"
            android:text="3"
            android:tag="3"
            style="@style/KeyboardButton"
            />
        <Button
            android:id="@+id/button_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/button_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_confirm"
            android:text="0"
            android:tag="0"
            style="@style/KeyboardButton"
            />
        <Button
            android:id="@+id/button_backspace"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/button_9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_minus"
            app:layout_constraintVertical_weight="1"
            android:text="&#9003;"
            style="@style/KeyboardButton"
            />
        <Button
            android:id="@+id/button_minus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/button_backspace"
            app:layout_constraintBottom_toTopOf="@id/button_confirm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button_6"
            app:layout_constraintVertical_weight="1"
            android:text="&#8722;"
            style="@style/KeyboardButton"
            />
        <Button
            android:id="@+id/button_confirm"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/button_minus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button_6"
            app:layout_constraintVertical_weight="2"
            android:text="&#10003;"
            style="@style/KeyboardButton"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>